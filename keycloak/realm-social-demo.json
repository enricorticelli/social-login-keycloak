{
  "realm": "social-demo",
  "enabled": true,
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "sslRequired": "external",
  "identityProviders": [
    {
      "alias": "google",
      "displayName": "Google",
      "providerId": "google",
      "enabled": true,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": true,
      "storeToken": true,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "first broker login",
      "config": {
        "clientId": "replace-with-google-client-id",
        "clientSecret": "replace-with-google-client-secret",
        "useJwksUrl": "true",
        "defaultScope": "openid profile email"
      }
    },
    {
      "alias": "facebook",
      "displayName": "Facebook",
      "providerId": "facebook",
      "enabled": true,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": false,
      "storeToken": true,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "first broker login",
      "config": {
        "clientId": "replace-with-facebook-client-id",
        "clientSecret": "replace-with-facebook-client-secret",
        "defaultScope": "public_profile,email"
      }
    }
  ],
  "clients": [
    {
      "clientId": "social-login-backend",
      "name": "Social Login Backend",
      "secret": "backend-secret",
      "description": "API che gestisce il token exchange",
      "rootUrl": "http://localhost:5188",
      "redirectUris": [
        "http://localhost:5188/*"
      ],
      "webOrigins": ["*"],
      "baseUrl": "",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "protocol": "openid-connect",
      "publicClient": false,
      "frontchannelLogout": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "defaultClientScopes": [
        "email",
        "profile",
        "web-origins"
      ],
      "optionalClientScopes": [
        "offline_access"
      ]
    },
    {
      "clientId": "social-login-frontend",
      "name": "Next Frontend",
      "description": "Frontend demo",
      "rootUrl": "http://localhost:3000",
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": ["+"],
      "protocol": "openid-connect",
      "publicClient": true,
      "frontchannelLogout": false,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "defaultClientScopes": [
        "email",
        "profile",
        "web-origins"
      ],
      "optionalClientScopes": [
        "offline_access"
      ]
    },
    {
      "clientId": "mock-social-app",
      "name": "Fake Social Provider",
      "description": "Client che simula il provider social (ROPC)",
      "publicClient": true,
      "protocol": "openid-connect",
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "defaultClientScopes": [
        "email",
        "profile"
      ],
      "optionalClientScopes": [
        "offline_access"
      ]
    }
  ],
  "users": [
    {
      "username": "demo",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "User",
      "email": "demo@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "demo",
          "temporary": false
        }
      ],
      "realmRoles": [
        "default-roles-social-demo"
      ]
    },
    {
      "username": "service-account-social-login-backend",
      "enabled": true,
      "serviceAccountClientId": "social-login-backend",
      "clientRoles": {
        "realm-management": [
          "view-users",
          "token-exchange"
        ]
      }
    }
  ]
}
